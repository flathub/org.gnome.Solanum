{
    "app-id" : "org.gnome.Solanum",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "solanum",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/solanum/cargo",
            "RUSTFLAGS" : "-L=/app/lib"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a",
        "/lib/girepository-1.0",
        "/share/gir-1.0",
        "/bin/sassc"
    ],
    "modules" : [
        {
            "name": "libsass",
            "buildsystem": "meson",
            "cleanup": [
                "*",
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/libsass.git",
                    "branch": "meson",
                    "commit": "302397c0c8ae2d7ab02f45ea461c2c3d768f248e"
                }
            ]
        },
        {
            "name": "sassc",
            "buildsystem": "meson",
            "cleanup": [
                "*",
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/sassc.git",
                    "branch": "meson",
                    "commit": "82803377c33247265d779af034eceb5949e78354"
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dintrospection=disabled",
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch" : "main",
                    "commit" : "65ac5258cdcd1c1bfdf2d8f29c9518e16bcca445"
                }
            ]
        },
        {
            "name" : "solanum",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/World/Solanum/uploads/cb1120971ed53facbba0b55c835f4f0d/solanum-2.1.0.tar.xz",
                    "sha256" : "beef2904647edc59444f57ce29d8a7da4096b44cad41aff0a7f66ee606b9edd2"
                }
            ]
        }
    ]
}
